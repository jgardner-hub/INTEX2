@{
    ViewData["Title"] = "Add Crash";
}

@model INTEX2.Models.Crash

<form method="post" asp-controller="Home" asp-action="AddCrash">

    <div asp-validation-summary="All"></div>
    <h1>Please Fill Out All of the Crash Info:</h1>

    @*<label asp-for="CRASH_DATETIME">Crash Datetime:</label>
    <input type="datetime" asp-for="CRASH_DATETIME" /><br />*@
    <label asp-for="CRASH_DATE">Crash Date:</label>
    <input type="date" asp-for="CRASH_DATE" /><br />
    <label asp-for="CRASH_TIME">Crash Time:</label>
    <input type="time" asp-for="CRASH_TIME" /><br />
    <label asp-for="ROUTE">Route:</label>
    <input asp-for="ROUTE" /><br />
    <label asp-for="MILEPOINT">Milepoint:</label>
    <input asp-for="MILEPOINT" /><br />
    <label asp-for="LAT_UTM_Y">Latitude:</label>
    <input asp-for="LAT_UTM_Y" /><br />
    <label asp-for="LONG_UTM_X">Longitude:</label>
    <input asp-for="LONG_UTM_X" /><br />
    <label asp-for="MAIN_ROAD_NAME">Main Road Name:</label>
    <input asp-for="MAIN_ROAD_NAME" /><br />
    <label asp-for="CITY">City:</label>
    <input asp-for="CITY" /><br />
    <label asp-for="COUNTY_NAME">County:</label>
    <select asp-for="COUNTY_NAME">
        @foreach (string c in ViewBag.Counties)
        {
            <option value="@c">@c</option>
        }
    </select>

    <label asp-for="CRASH_SEVERITY_ID">Severity:</label>
    <input type="number" min="0" max="5" asp-for="CRASH_SEVERITY_ID" /><br />

    <label asp-for="WORK_ZONE_RELATED">Work Zone Related:</label>
    <input type="checkbox" asp-for="WORK_ZONE_RELATED" /><br />

    <label asp-for="PEDESTRIAN_INVOLVED">Pedestrian Involved:</label>
    <input type="checkbox" asp-for="PEDESTRIAN_INVOLVED" /><br />

    <label asp-for="BICYCLIST_INVOLVED">Bicyclist Involved:</label>
    <input type="checkbox" asp-for="BICYCLIST_INVOLVED" /><br />

    <label asp-for="MOTORCYCLE_INVOLVED">Motorcyclist Involved:</label>
    <input type="checkbox" asp-for="MOTORCYCLE_INVOLVED" /><br />

    <label asp-for="IMPROPER_RESTRAINT">Improper Restraint:</label>
    <input type="checkbox" asp-for="IMPROPER_RESTRAINT" /><br />

    <label asp-for="UNRESTRAINED">Unrestrained:</label>
    <input type="checkbox" asp-for="UNRESTRAINED" /><br />

    <label asp-for="DUI">DUI:</label>
    <input type="checkbox" asp-for="DUI" /><br />

    <label asp-for="INTERSECTION_RELATED">Intersection Related:</label>
    <input type="checkbox" asp-for="INTERSECTION_RELATED" /><br />

    <label asp-for="WILD_ANIMAL_RELATED">Wild Animal Related:</label>
    <input type="checkbox" asp-for="WILD_ANIMAL_RELATED" /><br />

    <label asp-for="DOMESTIC_ANIMAL_RELATED">Domestic Animal Related:</label>
    <input type="checkbox" asp-for="DOMESTIC_ANIMAL_RELATED" /><br />

    <label asp-for="OVERTURN_ROLLOVER">Overturn Rollover:</label>
    <input type="checkbox" asp-for="OVERTURN_ROLLOVER" /><br />

    <label asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED">Commercial Motor Vehical Involved:</label>
    <input type="checkbox" asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED" /><br />

    <label asp-for="TEENAGE_DRIVER_INVOLVED">Teenage Driver Involved:</label>
    <input type="checkbox" asp-for="TEENAGE_DRIVER_INVOLVED" /><br />

    <label asp-for="OLDER_DRIVER_INVOLVED">Older Driver Involved:</label>
    <input type="checkbox" asp-for="OLDER_DRIVER_INVOLVED" /><br />

    <label asp-for="NIGHT_DARK_CONDITION">Night Driver Involved:</label>
    <input type="checkbox" asp-for="NIGHT_DARK_CONDITION" /><br />

    <label asp-for="SINGLE_VEHICLE">Single Vehicle:</label>
    <input type="checkbox" asp-for="SINGLE_VEHICLE" /><br />

    <label asp-for="DISTRACTED_DRIVING">Districted Driving:</label>
    <input type="checkbox" asp-for="DISTRACTED_DRIVING" /><br />

    <label asp-for="DROWSY_DRIVING">Drowsy Driving:</label>
    <input type="checkbox" asp-for="DROWSY_DRIVING" /><br />

    <label asp-for="ROADWAY_DEPARTURE">Roadway Departure:</label>
    <input type="checkbox" asp-for="ROADWAY_DEPARTURE" /><br />

    <button type="submit">Submit this Frickin Thang!</button>

</form>
